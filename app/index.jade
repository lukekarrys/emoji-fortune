doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    title Emoji Fortunes
    meta(name="description", content="Get your emoji fortune")
    meta(name="author", content="Luke Karrys")

    meta(name="viewport", content="width=device-width,initial-scale=1.0,maximum-scale=1.0")
    meta(name='apple-mobile-web-app-capable', content='yes')
    meta(name='apple-mobile-web-app-status-bar-style', content='black')
    meta(name='apple-mobile-web-app-title', content='EmojiFortun.es')

    link(rel='apple-touch-icon-precomposed', href='/ios.png', sizes='152x152')
    link(rel='shortcut icon', href='/favicon.ico')
    link(rel='icon', href='/favicon.ico')

    link(rel='stylesheet', type='text/css', href='https://fonts.googleapis.com/css?family=Oswald:700,400')
    link(rel='stylesheet', type='text/css', href=locals.resourcePrefix + locals.cssFileName)
    script(src=locals.resourcePrefix + locals.jsFileName)

  body
    #bg
    header
      h1#title
        span#fortuneText
    #fortune
    .actions
      a#tweetButton(target="_blank", href="#") Tweet It
      button#copy(type="button", data-text="") Copy
      button#refresh(type="button") Give Me a New One
    footer
      p
        | Made by 
        a(href="http://lukekarrys.com", target="_blank") @lukekarrys
        br
        | because of 
        a(href="https://twitter.com/nrrrdcore/status/453983082618839040", target="_blank") this tweet
